script/source = "extends KinematicBody2D

onready var animation = $AnimationPlayer

const SPEED = 50
const GRAVITY = 200
const JUMP_POWER = 70
const UP_VECTOR = Vector2(0,-1) #indicator, how the up direction is defined 

var move_offset = Vector2()
var direction = 1 # 1 = right, -1 left

# Called when the node enters the scene tree for the first time.
func _ready():
	animation.play(\"rolling\")



func _process(delta):
	check_destroy()
	if is_on_floor():
		move_offset.y = 0
		if floor(position.x) == 216:
			animation.play_backwards(\"rolling\")
			direction = -1
		if floor(position.x) == 8:
			animation.play(\"rolling\")
			direction = 1
		move_offset.x = direction * SPEED
	else:
		move_offset.x = 0
		move_offset.y += GRAVITY * delta # make fall faster the longer the fall

	move_and_slide_with_snap(move_offset, Vector2(0,1), UP_VECTOR)

func check_destroy():
	if floor(position.x) == 8 and position.y > 280:
		 queue_free()
	
