script/source = "extends KinematicBody2D

onready var animation = $AnimationPlayer

const SPEED = 50
const GRAVITY = 200

const UP_VECTOR = Vector2(0,-1) #indicator, how the up direction is defined 

var velocity = Vector2()
var direction = 1 # 1 = right, -1 left

var is_falling_ladder = false
var falling_platform_y = 0

# Called when the node enters the scene tree for the first time.
func _ready():
	animation.play(\"rolling\")


func _process(delta):
	check_destroy()


	if is_on_floor() and not is_falling_ladder:

		velocity.y = 0
		
		if direction:
			animation.play(\"rolling\")
		else:
			animation.play_backwards(\"rolling\")

		if floor(position.x) == 216:
			direction = -1
		if floor(position.x) == 8:
			direction = 1
			
		velocity.x = direction * SPEED
	else:
		velocity.x = 0
		velocity.y += GRAVITY * delta # make fall faster the longer the fall

	move_and_slide_with_snap(velocity, Vector2(0,1), UP_VECTOR)
	
	is_falling_ladder = check_ladder_falling()

func check_ladder_falling():
	# check if the barrel is moving over the top of a ladder and
	# decide randomly, if it falls down this ladder
	if not is_falling_ladder:
		for area in $LadderTopHitBox.get_overlapping_areas():
			if area.name.begins_with(\"Ladder\"):
				randomize()
				var random_val = round(rand_range(0,8))
				if(random_val == 0):
					falling_platform_y = position.y
					animation.play(\"ladder_falling\")
					position.y += 10
					direction = -1 * direction
					return true
	else:
		if is_on_floor() and falling_platform_y + 8 < position.y:
			return false
		else:
			return true
	
func check_destroy():
	# destroy the barrel, if it reached the lower left corner
	if floor(position.x) == 8 and position.y > 280:
		 queue_free()
"

